<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:layout_gravity="fill_horizontal">

    <ImageView
        android:id="@+id/settings"
        android:layout_width="@dimen/abc_action_button_min_height_material"
        android:layout_height="@dimen/abc_action_button_min_width_material"
        android:src="@mipmap/user_settings_icon_w"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_toRightOf="@id/settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".33"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/weather_image1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:src="#fff"/>
                <TextView
                    android:id="@+id/weather_date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="12/13"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="High"
                    android:layout_gravity="center"
                    android:textSize="9sp"/>
                <TextView
                    android:id="@+id/weather_high1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="67\u00B0"
                    android:layout_gravity="center"
                    android:textSize="9sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="low"
                    android:layout_gravity="center"
                    android:textSize="9sp"/>
                <TextView
                    android:id="@+id/weather_low1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="67\u00B0"
                    android:layout_gravity="center"
                    android:textSize="9sp"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".33"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/weather_image2"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:src="#fff"/>
                <TextView
                    android:id="@+id/weather_date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="12/13"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="High"
                    android:layout_gravity="center"
                    android:textSize="9sp"/>
                <TextView
                    android:id="@+id/weather_high2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="67\u00B0"
                    android:layout_gravity="center"
                    android:textSize="9sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="low"
                    android:layout_gravity="center"
                    android:textSize="9sp"/>
                <TextView
                    android:id="@+id/weather_low2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="67\u00B0"
                    android:layout_gravity="center"
                    android:textSize="9sp"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".33"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/weather_image3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:src="#fff"/>
                <TextView
                    android:id="@+id/weather_date3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="12/13"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="High"
                    android:layout_gravity="center"
                    android:textSize="9sp"/>
                <TextView
                    android:id="@+id/weather_high3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="67\u00B0"
                    android:layout_gravity="center"
                    android:textSize="9sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:text="low"
                    android:layout_gravity="center"
                    android:textSize="9sp"/>
                <TextView
                    android:id="@+id/weather_low3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="67\u00B0"
                    android:layout_gravity="center"
                    android:textSize="9sp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>